<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            app:srcCompat="@drawable/images"
            android:id="@+id/imgp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgp"
            android:layout_toEndOf="@+id/imgp"
            android:layout_marginLeft="74dp"
            android:layout_marginStart="74dp"
            android:layout_marginTop="24dp"
            android:id="@+id/txtcedulap" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtcedulap"
            android:layout_alignLeft="@+id/txtcedulap"
            android:layout_alignStart="@+id/txtcedulap"
            android:layout_marginTop="14dp"
            android:id="@+id/txtnombrep" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtnombrep"
            android:layout_alignLeft="@+id/txtnombrep"
            android:layout_alignStart="@+id/txtnombrep"
            android:layout_marginTop="15dp"
            android:id="@+id/txtapellidop" />

    </RelativeLayout>
</LinearLayout>